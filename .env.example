# Node / server
NODE_ENV=development
PORT=5001

# Database
MONGODB_URI=mongodb://127.0.0.1:27017/cms

# CORS
# In dev, point to Angular dev server port (see frontend/angular.json)
DEVELOPMENT_CORS_ORIGIN=http://localhost:5201
# Optional: set production origin (e.g., your deployed frontend URL)
PRODUCTION_CORS_ORIGIN=

# Auth / JWT
# Change this in production! Keep it secret.
JWT_SECRET=secretKey
# JWT TTLs (passport/jwt expect time strings like 15m, 7d)
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=7d
